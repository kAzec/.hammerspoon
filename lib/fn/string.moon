---------------------------------------------------------------------------
-- Environment ------------------------------------------------------------
---------------------------------------------------------------------------

import gsub, upper from string
import merge from require 'fn.table'
{ sigcheck:T } = require 'typecheck'

---------------------------------------------------------------------------
-- Implementation ---------------------------------------------------------
---------------------------------------------------------------------------

capitalize = (text) -> gsub text, '^%l', upper

---------------------------------------------------------------------------
-- Interface --------------------------------------------------------------
---------------------------------------------------------------------------

merge {
  capitalize: T 'string', capitalize
}, string
